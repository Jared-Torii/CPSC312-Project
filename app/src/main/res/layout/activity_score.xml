<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".score">

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="SCORE"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/player1scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="51dp"
        android:text="Player 1"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/player2scoreText"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="187dp" />

    <TextView
        android:id="@+id/player2scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="71dp"
        android:text="Player 2"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/player1scoreText"
        tools:layout_editor_absoluteY="189dp" />

    <TextView
        android:id="@+id/player1Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:text=" POINTS"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/player2Score"
        app:layout_constraintStart_toStartOf="@+id/p1ScoreRecycler" />

    <TextView
        android:id="@+id/player2Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:text=" POINTS"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/p2ScoreRecycler"
        app:layout_constraintStart_toEndOf="@+id/player1Score" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/p1ScoreRecycler"
        android:layout_width="137dp"
        android:layout_height="349dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/player1Score"
        app:layout_constraintEnd_toStartOf="@+id/p2ScoreRecycler"
        app:layout_constraintStart_toStartOf="@+id/player1scoreText"
        app:layout_constraintTop_toBottomOf="@+id/player1scoreText" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/p2ScoreRecycler"
        android:layout_width="144dp"
        android:layout_height="350dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toTopOf="@+id/player2Score"
        app:layout_constraintEnd_toEndOf="@+id/player2scoreText"
        app:layout_constraintStart_toEndOf="@+id/p1ScoreRecycler"
        app:layout_constraintTop_toBottomOf="@+id/player2scoreText" />
</androidx.constraintlayout.widget.ConstraintLayout>